{
  "name": "idb-file-storage",
  "version": "0.1.0",
  "description": "Simple Promise-based IndexedDB wrapper to store files",
  "main": "dist/idb-file-storage.js",
  "scripts": {
    "build": "gulp",
    "build:watch": "gulp default:watch",
    "test": "xo --reporter codeframe && npm run build && karma start --single-run",
    "test:watch": "gulp test:watch",
    "docs": "esdoc"
  },
  "keywords": [
    "IndexedDB",
    "File",
    "Storage",
    "MutableFile",
    "WebExtensions"
  ],
  "author": "Luca Greco <lgreco@mozilla.com>",
  "license": "MPL-2.0",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-babili": "0.0.12",
    "chai": "^3.5.0",
    "esdoc": "^0.5.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-xo": "^0.14.0",
    "karma": "^1.5.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.8.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-notify-reporter": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "xo": "^0.17.1"
  },
  "xo": {
    "space": true,
    "envs": "browser",
    "rules": {
      "quotes": [
        "error",
        "double"
      ]
    },
    "ignored": [
      "dist/**",
      "docs/**"
    ],
    "overrides": [
      {
        "files": "test/**/*.js",
        "globals": [
          "describe",
          "it",
          "before",
          "after",
          "beforeEach",
          "afterEach",
          "expect",
          "IDBFiles",
          "skipOnSupportedIDBMutableFile",
          "skipOnUnsupportedIDBMutableFile"
        ],
        "rules": {
          "generator-star-spacing": [
            "error",
            {
              "before": false,
              "after": true
            }
          ]
        }
      }
    ]
  }
}
